    <h1 class="text-center">Edit</h1>
    <div class="row">
    <div class="col-6 offset-3">
        <form method="POST" action="/students/<%=student._id%>?_method=PUT" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="name">Name</label>
                <input class="form-control" type="text" id="name" name="name" value="<%= student.name %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="enroll">Enrollment</label>
                <input class="form-control" type="text" id="enroll" name="enroll" value="<%= student.enroll %> " required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="score">Score</label>
                <input class="form-control" type="number" id="score" name="score" value="<%= student.score %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Update Student</button>
            </div>
        </form>
            <a href="/students/<%=student._id%> ">Cancel</a>

    </div>
