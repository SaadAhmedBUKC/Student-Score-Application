<div class="row">
    <div class="col-6">
        <div class="card mb-3">
              <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner">
        <% student.image.forEach((img, i) => { %>
    <div class="carousel-item <%= i===0 ? 'active' : '' %>">
        <img src="<%=img.url %>" class="d-block w-100" alt="">
    </div>
    <% }) %> 
  </div>
  <% if(student.image.length > 1) {%> 
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
  <% } %> 
</div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-muted"><%=student.enroll%></li>
                <li class="list-group-item"><%=student.score%></li>
            </ul>
            <div class="card-body">
                <a class="card-link btn btn-info" href="/students/<%=student._id%>/edit ">Edit</a>
                <form class="d-inline" action="/students/<%=student._id%>?_method=DELETE" method="POST">
